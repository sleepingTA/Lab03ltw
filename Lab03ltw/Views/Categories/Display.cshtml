@model Lab03ltw.Models.Category

<div class="category-detail-container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-info-circle me-2"></i>Category Details</h3>
                </div>
                <div class="card-body p-4">
                    <div class="p-4">
                        <h2 class="category-title mb-2">@Model.Name</h2>



                        <div class="category-actions d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <div>
                                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                                    <i class="fas fa-edit me-2"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger delete-btn">
                                    <i class="fas fa-trash-alt me-2"></i>Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .category-detail-container {
        padding: 1rem 0;
    }

    .card {
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1) !important;
        }

    .category-title {
        color: #2c3e50;
        font-weight: 700;
        font-size: 1.8rem;
        border-bottom: 2px solid #3498db;
        padding-bottom: 0.5rem;
    }

    .category-description {
        margin-top: 1rem;
    }

    .description-title {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .description-text {
        color: #7f8c8d;
        line-height: 1.6;
        text-align: justify;
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    .btn-outline-danger:hover {
        box-shadow: 0 5px 15px rgba(220, 53, 69, 0.2);
    }

    .btn-outline-primary:hover {
        box-shadow: 0 5px 15px rgba(52, 152, 219, 0.2);
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Confirmation dialog for delete
            $(".delete-btn").click(function(e) {
                if (!confirm("Are you sure you want to delete this category?")) {
                    e.preventDefault();
                }
            });
        });
    </script>
}