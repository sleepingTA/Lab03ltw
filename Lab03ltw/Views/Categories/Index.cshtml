@model IEnumerable<Lab03ltw.Models.Category>

<div class="container mt-4">
    <h2 class="text-primary">Categories</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                
                    <td class="text-center">
                        <a asp-action="Display" asp-route-id="@category.Id" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Add" class="btn btn-success">Add New Category</a>
</div>