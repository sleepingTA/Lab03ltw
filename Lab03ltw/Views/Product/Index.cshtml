@model IEnumerable<Lab03ltw.Models.Product>

<div class="container mt-4 p-4 border rounded shadow-sm bg-light">
    <h2 class="mb-4 text-primary">Products</h2>
    <table class="table table-striped table-hover border rounded overflow-hidden">
        <thead class="table-dark text-white">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td class="align-middle">@product.Name</td>
                    <td class="align-middle text-success fw-bold">@product.Price.ToString("C")</td>
                    <td class="align-middle">@product.Description</td>
                    <td class="align-middle">@(product.Category?.Name ?? "N/A")</td>
                    <td class="text-center align-middle">
                        <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-info btn-sm text-white">View</a>
                        <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning btn-sm text-dark">Edit</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm text-white" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Add" class="btn btn-success mt-3">Add New Product</a>
</div>