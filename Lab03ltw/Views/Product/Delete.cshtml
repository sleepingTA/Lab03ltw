@model Lab03ltw.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="category-delete-container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Delete Category</h3>
                </div>
                <div class="card-body p-4">
                    <p>Are you sure you want to delete the category <strong>@Model.Name</strong>?</p>
                    <p class="text-muted">This action cannot be undone.</p>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                        <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .category-delete-container {
        padding: 1rem 0;
    }

    .card {
        transition: all 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
        }

    .btn-danger {
        transition: all 0.3s;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.2);
        }
</style>