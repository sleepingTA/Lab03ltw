@model Lab03ltw.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Edit Product";
}

<div class="product-form-container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Product</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Update" method="post" enctype="multipart/form-data" id="productForm">
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="Enter product name" id="productName" />
                                    <label asp-for="Name">Product Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter product price" id="productPrice" />
                                    <label asp-for="Price">Price ($)</label>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select" id="productCategory">
                                        <option value="">Select a category</option>
                                    </select>
                                    <label asp-for="CategoryId">Category</label>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                

                                <div class="mb-3">
                                    <label class="form-label fw-bold"><i class="fas fa-image me-2"></i>Product Image</label>
                                    <div class="input-group">
                                        <input type="file" asp-for="ImageUrl" class="form-control" id="productImage" />
                                        <label class="input-group-text" for="productImage">Browse</label>
                                    </div>
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <div class="image-preview mt-2" id="imagePreview">
                                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                        {
                                            <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded" style="max-height: 150px;" />
                                        }
                                        else
                                        {
                                            <p class="text-muted small">No image available</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/Product/Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <div>
                                <button type="reset" class="btn btn-outline-danger me-2">
                                    <i class="fas fa-undo me-2"></i>Reset
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Update Product
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
    
            $("#productImage").change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $("#imagePreview").html(`<img src="${e.target.result}" class="img-fluid rounded" style="max-height: 150px;" />`);
                    }
                    reader.readAsDataURL(file);
                }
            });

       
            $("#productForm").on("submit", function(e) {
                let isValid = true;

         
                if ($("#productName").val() === "") {
                    isValid = false;
                    $("#productName").addClass("is-invalid");
                } else {
                    $("#productName").removeClass("is-invalid").addClass("is-valid");
                }

         
                if ($("#productPrice").val() === "" || parseFloat($("#productPrice").val()) <= 0) {
                    isValid = false;
                    $("#productPrice").addClass("is-invalid");
                } else {
                    $("#productPrice").removeClass("is-invalid").addClass("is-valid");
                }

            
                if ($("#productCategory").val() === "") {
                    isValid = false;
                    $("#productCategory").addClass("is-invalid");
                } else {
                    $("#productCategory").removeClass("is-invalid").addClass("is-valid");
                }

                if (isValid) {
               
                    $("button[type='submit']").html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Updating product...');
                    $("button[type='submit']").prop("disabled", true);

                    setTimeout(function() {
                        window.location.href = "/Product/Index";
                    }, 1000);
                } else {
                    e.preventDefault();
                }
            });
        });
    </script>
}

<style>
    .product-form-container {
        padding: 2rem 0;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #3498db;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
    }

    .image-preview {
        min-height: 100px;
        border: 1px dashed #ccc;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        padding: 10px;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        padding: 0.5rem 1.5rem;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
        transition: all 0.3s;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
            transform: translateY(-2px);
        }

    .btn-outline-danger {
        transition: all 0.3s;
    }

        .btn-outline-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.2);
        }

    .card {
        transition: all 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
        }
</style>